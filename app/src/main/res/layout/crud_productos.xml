<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/crud_productos">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:orientation="horizontal"
        android:paddingRight="5dp"
        android:weightSum="1">

        <TextView
            android:id="@+id/lCodigo"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="0.33"
            android:text="CÃ³digo:"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="14sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etxtCodigo"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/btnBuscar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/black"
            android:text="BUSCAR"
            android:textColor="#FFFFFF"
            android:visibility="visible" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="left"
        android:paddingRight="5dp"
        android:weightSum="1">

        <TextView
            android:id="@+id/lNombre"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="0.33"
            android:text="Nombre:"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="14sp"
            android:textStyle="bold" />

    </LinearLayout>


    <EditText
        android:id="@+id/etxtNombre"
        android:layout_width="271dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="left"
        android:paddingRight="5dp"
        android:weightSum="1">

        <TextView
            android:id="@+id/lMarca"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="0.33"
            android:text="Marca:"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="14sp"
            android:textStyle="bold" />

    </LinearLayout>



    <EditText
        android:id="@+id/etxtMarca"
        android:layout_width="271dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="left"
        android:paddingRight="5dp"
        android:weightSum="1">

        <TextView
            android:id="@+id/lPeso"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="0.33"
            android:text="Peso:"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="14sp"
            android:textStyle="bold" />

    </LinearLayout>



    <EditText
        android:id="@+id/etxtPeso"
        android:layout_width="271dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="left"
        android:paddingRight="5dp"
        android:weightSum="1">

        <TextView
            android:id="@+id/lPrecio"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="0.33"
            android:text="Precio:"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="14sp"
            android:textStyle="bold" />

    </LinearLayout>

    <EditText
        android:id="@+id/etxtPrecio"
        android:layout_width="271dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="left"
        android:paddingRight="5dp"
        android:weightSum="1">
    </LinearLayout>

    <Button
        android:id="@+id/btnAgregar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_blue_light"
        android:text="Agregar" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="8dp"
        android:orientation="horizontal"
        android:gravity="left"
        android:paddingRight="5dp"
        android:weightSum="1">
    </LinearLayout>


    <Button
        android:id="@+id/btnEditar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_blue_light"
        android:text="Editar" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="8dp"
        android:orientation="horizontal"
        android:gravity="left"
        android:paddingRight="5dp"
        android:weightSum="1">
    </LinearLayout>


    <Button
        android:id="@+id/btnEliminar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_blue_light"
        android:text="Eliminar" />




</LinearLayout>